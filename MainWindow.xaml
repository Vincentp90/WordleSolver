<Window x:Class="WordleSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:wordlesolver="clr-namespace:WordleSolver"
        Title="Wordle" Width="900" Height="740"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="TileStyle" TargetType="Border">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Background" Value="#121213"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TileTextStyle">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Play and solve game" Command="{Binding ShowGameCommand}"/>
            <Button Content="Solve other game" Command="{Binding ShowSolveOtherCommand}"/>
        </StackPanel>

        <ContentControl Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>
